<%= form_for(@post , :html => {:multipart => true}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
 <div class="field">
    <%= f.label :content2 %><br>
    <%= f.text_area :content2 %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
<div class="field">
    <%= f.label :image2 %><br>
    <%= f.file_field :image2 %>
  </div>
  <div class="field">
    <%= f.label :author_id %><br>
    <%= collection_select(:post, :author_id, Author.all, :id, :name, prompt: 'selecione o Autor') %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
   <%= collection_select(:post, :category_id, Category.all, :id, :name, prompt: 'selecione a Categoria') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
